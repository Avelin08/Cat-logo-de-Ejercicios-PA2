#include<stdio.h>

//deficion de la estructura persona
struct Persona {
    char nombre[50];
    int edad;
    float altura;
};
int main()
{
    //Creo una variable de tipo Persona llamada persona1
    struct Persona persona1;
    
    //modificar los elementos de la estructura
    strcpy(persona1.nombre,"pedro");
    persona1.edad=20;
    persona1.altura=1.70;
    
    //Imprimir los datos de las personas
    printf("Nombre: %s\n", persona1.nombre);
    printf("Nombre: %d\n", persona1.edad);
    printf("Nombre: %f\n", persona1.altura);
    
    return 0;
}
